<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid>
        <Label Content="{Binding CurrentTime, StringFormat='{}{0:dd/MM/yyyy HH:mm:ss}'}" HorizontalAlignment="Left" Margin="306,108,0,0" VerticalAlignment="Top" Height="207" Width="180" FontSize="20"/>
        <Button Style="{StaticResource myButtonStyle}" Content="Add One Day"  Margin="325,201,0,0" Click="AdvanceTimeByDay" Height="29" Width="147"/>
        <Button Style="{StaticResource myButtonStyle}" Content="Add One Year"  Margin="325,264,0,0"  Click="AdvanceTimeByYear" Height="29" Width="147"/>
        <Button Style="{StaticResource myButtonStyle}" Content="Add One Hour"  Margin="325,233,0,0" Click="AdvanceTimeByHour" Height="29" Width="147"/>
        <Button Style="{StaticResource myButtonStyle}" Content="Add One Month"  Margin="325,167,0,0"  Click="AdvanceTimeByMonth" Height="29" Width="147"/>
    </Grid>
</Window>
