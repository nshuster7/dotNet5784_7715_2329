                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF00FFEB"/>
                    <GradientStop Color="#FF002421"/>
                    <GradientStop Color="#FF00514B"/>
                    <GradientStop Color="#FF00A093"/>
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FF00322E"/>
                    <GradientStop Color="#FF000101"/>
                    <GradientStop Color="#FF00F1F1" Offset="0.779"/>
                    <GradientStop Color="#FFDFEDEC"/>
                    <GradientStop Color="#FF9BDAD7"/>
