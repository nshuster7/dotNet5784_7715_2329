            </Button.Background>
        </Button>
        <Button Content="Data initalization" HorizontalAlignment="Left" Margin="290,82,0,0" VerticalAlignment="Top" Height="135" Width="215" Click="DataInitalization" FontFamily="Baskerville Old Face" FontSize="20" FontWeight="Bold">
