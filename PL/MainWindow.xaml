                    <GradientStop Color="Black" Offset="0.035"/>
                    <GradientStop Color="#FF1EF8FF" Offset="1"/>
                    <GradientStop Color="White" Offset="0.55"/>
                    <GradientStop Color="#FFE1E1E1" Offset="0"/>
