<Window x:Class="PL.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ManagerWindow" Height="450" Width="800">
    <Grid>
        <Button Style="{StaticResource myButtonStyle}" Content="View employee list"  Margin="0,10,0,0"  Click="ViewEmployeeListClick" HorizontalAlignment="Center"/>
        <Button Style="{StaticResource myButtonStyle}" Content="Data initialization"  Margin="58,344,0,0" Click="DataInitalization" Height="60" Width="150"/>
        <Button Style="{StaticResource myButtonStyle}" Content="Reset data"  Margin="583,344,0,0"  Click="DataReset" Height="60" Width="150"/>
        <Button Style="{StaticResource myButtonStyle}" Content="View task list"  Margin="0,150,0,0" Click="ViewTaskListClick" HorizontalAlignment="Center"/>
        <Button Style="{StaticResource myButtonStyle}" Content="Gant"  Margin="0,284,0,0" Click="ViewGantClick" HorizontalAlignment="Center"/>
    </Grid>
</Window>
