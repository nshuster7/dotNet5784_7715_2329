<Window x:Class="PL.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ManagerWindow" Height="450" Width="800" Icon="/project-management.png">
    <Border CornerRadius="12">

        <Border CornerRadius="10"                    
   BorderThickness="2"
   Opacity="0.75">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#060531" Offset="0"/>
                    <GradientStop Color="#1B1448" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80.04"/>
                    <RowDefinition Height="78.5"/>
                    <RowDefinition Height="67.5"/>
                    <RowDefinition Height="79"/>
                    <RowDefinition Height="113.96"/>
                  
                </Grid.RowDefinitions>
                <Button Style="{StaticResource myButtonStyle}"  Content="View employee list"  Click="ViewEmployeeListClick" Height="93" Width="312" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="150" Height="40" CornerRadius="20" Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Style="{StaticResource myButtonStyle}"  Content="View task list"  Margin="333,8,0,0" Click="ViewTaskListClick" Width="150" Height="40" RenderTransformOrigin="0.5,0.5" Grid.Row="2" >
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0.368"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="150" Height="40" CornerRadius="20" Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Style="{StaticResource myButtonStyle}" Content="Gant" Click="ViewGantClick" Width="348" Height="60" HorizontalAlignment="Center" Margin="0,40,0,0" Grid.Row="2" Grid.RowSpan="2">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="150" Height="40" CornerRadius="20" Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Style="{StaticResource myButtonStyle}" Content="Automatic schedule" Click="ViewAutomaticScheduleClick" Width="348" Height="60" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="150" Height="40" CornerRadius="20" Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Style="{StaticResource myButtonStyle}" FontSize="16" Content="Data initialization" Background="Purple" Margin="243,16,0,0" 
                        Click="DataInitalization" Height="98" Width="150" RenderTransformOrigin="0.452,-0.268" Grid.Row="4">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Height="60" Width="150" CornerRadius="20" Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Style="{StaticResource myButtonStyle}" Content="Reset data"   Click="DataReset"  
                        FontSize="16" FontFamily="Montserrat" Cursor="Hand" Background="Purple" FontWeight="Bold" Margin="411,35,0,0" Grid.Row="4">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Height="60" Width="150" CornerRadius="20" Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </Grid>
        </Border>
    </Border>
</Window>
