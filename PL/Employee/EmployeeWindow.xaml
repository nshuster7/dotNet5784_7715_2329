<Window x:Class="PL.Employee.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Employee"
        mc:Ignorable="d"
        Title="EmployeeWindow" Height="450" Width="800"
        DataContext="{Binding CurrentEmployee, RelativeSource={RelativeSource Self}, Mode=TwoWay}" Icon="/Employee/user.png">
    <Grid>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="234,99,0,0" VerticalAlignment="Top" Height="26" Width="111" FontSize="14" FontFamily="Arial" Background="#FFFFE5A4" HorizontalContentAlignment="Center"/>
        <TextBox Text= "{Binding Name, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" 
            HorizontalAlignment="Left" Margin="368,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="20"/>
        <Label Content="Id:" HorizontalAlignment="Left" Margin="234,130,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14" Background="#FFFFE5A4" HorizontalContentAlignment="Center" Width="111"/>
        <TextBox Text= "{Binding Id, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" 
                 IsEnabled="{Binding Id, Converter={StaticResource ConvertIdToBoolKey} ,Mode=OneTime}" 
                 HorizontalAlignment="Left" Margin="368,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="150"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="234,164,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14" Background="#FFFFE5A4" Width="111" HorizontalContentAlignment="Center"/>
        <TextBox Text= "{Binding Email, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" 
                 HorizontalAlignment="Left" Margin="368,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <Label Content="Status:" HorizontalAlignment="Left" Margin="234,197,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14" Background="#FFFFE5A4" Width="111" HorizontalContentAlignment="Center"/>
        <ComboBox HorizontalAlignment="Left" Margin="368,199,0,0" VerticalAlignment="Top" Width="150" Height="20"
               ItemsSource="{Binding Source={StaticResource WorkStatusKey }}"
               SelectedValue="{Binding Status, Mode=TwoWay,NotifyOnValidationError=True, ValidatesOnExceptions=True }"/>
        <Label Content="Type:" HorizontalAlignment="Left" Margin="234,232,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14" Background="#FFFFE5A4" Width="111" HorizontalContentAlignment="Center"/>
        <ComboBox HorizontalAlignment="Left" Margin="368,240,0,0" VerticalAlignment="Top" Width="150"
               ItemsSource="{Binding Source={StaticResource EmployeeTypeKey}}"
               SelectedValue="{Binding Type, Mode=TwoWay,NotifyOnValidationError=True, ValidatesOnExceptions=True }" Height="20"/>
        <Label Content="HourlyRate:" HorizontalAlignment="Left" Margin="234,269,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14" Background="#FFFFE5A4" Width="111" HorizontalContentAlignment="Center"/>
        <TextBox Text="{Binding HourlyRate, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" 
                 HorizontalAlignment="Left" Margin="368,275,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="20"/>
        <Button Style="{StaticResource myButtonStyle}" Content="{Binding Id, Converter={StaticResource ConvertIdToContentKey} ,Mode=OneTime}" 
                HorizontalAlignment="Left" Margin="42,356,0,0" VerticalAlignment="Top"  Width="90" FontFamily="Arial" FontSize="16" 
                Height="39" Padding="5" Click="UpdateAddClick">

        </Button>
    </Grid>
</Window>
