<Window x:Class="PL.Employee.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Employee"
        mc:Ignorable="d"
        Title="EmployeeWindow" Height="450" Width="800"
        DataContext="{Binding CurrentEmployee, RelativeSource={RelativeSource Self}, Mode=TwoWay}">
    <Grid>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="298,99,0,0" VerticalAlignment="Top" Height="26" Width="47" FontSize="14" FontFamily="Arial"/>
        <TextBox Text= "{Binding Name, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" 
            HorizontalAlignment="Left" Margin="368,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="20"/>
        <Label Content="Id:" HorizontalAlignment="Left" Margin="322,130,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14"/>
        <TextBox Text= "{Binding Id, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" 
                 HorizontalAlignment="Left" Margin="368,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="120"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="296,164,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14"/>
        <TextBox Text= "{Binding Email, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" 
                 HorizontalAlignment="Left" Margin="368,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Status:" HorizontalAlignment="Left" Margin="291,197,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14"/>
        <ComboBox HorizontalAlignment="Left" Margin="368,199,0,0" VerticalAlignment="Top" Width="120" Height="20"
               ItemsSource="{Binding Source={StaticResource WorkStatusKey }}"
               SelectedValue="{Binding Status, Mode=TwoWay,NotifyOnValidationError=True, ValidatesOnExceptions=True }"/>
        <Label Content="Type:" HorizontalAlignment="Left" Margin="301,236,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14"/>
        <ComboBox HorizontalAlignment="Left" Margin="368,240,0,0" VerticalAlignment="Top" Width="120"
               ItemsSource="{Binding Source={StaticResource EmployeeTypeKey}}"
               SelectedValue="{Binding Type, Mode=TwoWay,NotifyOnValidationError=True, ValidatesOnExceptions=True }" Height="20"/>
        <Label Content="HourlyRate:" HorizontalAlignment="Left" Margin="274,275,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14"/>
        <TextBox Text="{Binding HourlyRate, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" 
                 HorizontalAlignment="Left" Margin="368,275,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="20"/>
        <Button Content="{Binding Id, Converter={StaticResource ConvertIdToContentKey} ,Mode=OneTime}" 
                HorizontalAlignment="Left" Margin="42,356,0,0" VerticalAlignment="Top"  Width="90" FontFamily="Arial" FontSize="16" 
                Height="39" Padding="5" Click="UpdateAddClick">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Orange" Offset="0.035"/>
                    <GradientStop Color="#FFFFFF" Offset="1"/>
                    <GradientStop Color="White" Offset="0.55"/>
                    <GradientStop Color="#FFE1E1E1" Offset="0"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
