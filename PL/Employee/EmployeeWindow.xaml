<Window x:Class="PL.Employee.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Employee"
        mc:Ignorable="d"
        Title="EmployeeWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Id:" HorizontalAlignment="Left" Margin="322,126,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14"/>
        <TextBox Text= "{Binding Id, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" HorizontalAlignment="Left" Margin="368,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="298,99,0,0" VerticalAlignment="Top" Height="26" Width="47" FontSize="14" FontFamily="Arial"/>
        <TextBox Text= "{Binding Name, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" HorizontalAlignment="Left" Margin="368,279,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="296,164,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14"/>
        <TextBox Text= "{Binding Email, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" HorizontalAlignment="Left" Margin="368,164,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Status:" HorizontalAlignment="Left" Margin="291,197,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14"/>
        <ComboBox HorizontalAlignment="Left" Margin="368,201,0,0" VerticalAlignment="Top" Width="120"
               ItemsSource="{Binding Source={StaticResource WorkStatusKey }}"
               SelectedValue="{Binding WorkStatus, Mode=TwoWay,NotifyOnValidationError=True, ValidatesOnExceptions=True }"/>
        <Label Content="Type:" HorizontalAlignment="Left" Margin="301,236,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14"/>
        <ComboBox HorizontalAlignment="Left" Margin="368,238,0,0" VerticalAlignment="Top" Width="120"
               ItemsSource="{Binding Source={StaticResource EmployeeTypeKey}}"
               SelectedValue="{Binding Type, Mode=TwoWay,NotifyOnValidationError=True, ValidatesOnExceptions=True }"/>
        <Label Content="HourlyRate:" HorizontalAlignment="Left" Margin="274,275,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14"/>
        <TextBox Text="{Binding HourlyRate, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" HorizontalAlignment="Left" Margin="368,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="76,367,0,0" VerticalAlignment="Top" Height="39" Width="82" FontFamily="Arial" FontSize="16">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.059"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FF00FFEB" Offset="0.579"/>
                    <GradientStop Color="White" Offset="0.475"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
